# FinanceDB Configuration

[server]
host = "0.0.0.0"
port = 3000

[logging]
level = "info"
json = false

[storage]
# Storage backend: "memory" (default), "sqlite", or "postgres"
backend = "memory"
# Path to SQLite database file (only used when backend = "sqlite")
# sqlite_path = "findb.db"
# PostgreSQL connection string (only used when backend = "postgres")
# postgres_url = "host=localhost user=findb password=findb dbname=findb"

[auth]
enabled = false

# Uncomment to enable API key authentication:
# enabled = true
# [[auth.api_keys]]
# name = "admin-service"
# key = "your-secret-key-here"
# role = "admin"
#
# [[auth.api_keys]]
# name = "reader-service"
# key = "another-key"
# role = "reader"
